<view class="amd-grid-item amd-grid-item-{{layout}}  {{verticalSpace?'amd-grid-item-vertical-space':''}} amd-grid-item-columns-{{columns}} {{showDivider?'amd-grid-item-line':''}}" catchTap="onTap" onFirstAppear="onFirstAppear">
    <slot name="icon" item="{{item}}">
        <image style="{{iconSize?('width:'+iconSize + ';height:' + iconSize) : ''}}" src="{{item.icon}}" class="amd-grid-item-img amd-grid-item-img-{{item.iconStyle||iconStyle}}" a:if="{{item.icon.indexOf('http')===0||item.icon.indexOf('data:')===0||item.icon.indexOf('.')===0||item.icon.indexOf('/')===0}}"/>
        <amd-icon fontSize="{{iconSize}}"  class="amd-grid-item-icon  amd-grid-item-icon-{{item.iconStyle||iconStyle}}"  a:else type="{{item.icon}}"/>
    </slot>
    <view class="amd-grid-item-title amd-grid-item-title-{{titleSize}}">
        <slot name="title" item="{{item}}">{{item.title}}</slot>
    </view>
    <view class="amd-grid-item-description">
        <slot name="description" item="{{item}}">{{item.description}}</slot>
    </view>
</view>
