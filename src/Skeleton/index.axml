<view a:if="{{loading}}" class="amd-v1-skeleton {{className||''}}">
    <view a:if="{{avatar}}" class="amd-v1-skeleton-avatar-wrapper">
        <avatar animate="{{animate}}" loading size="{{avatar.size}}" />
    </view>
    <view class="amd-v1-skeleton-content-wrapper">
        <title a:if="{{title}}" animate="{{animate}}" loading />
        <paragraph a:if="{{paragraph}}" animate="{{animate}}" rows="{{paragraph.rows}}" loading />
    </view>
</view>
<slot a:else />
