<container title="inline button">
  <button
    type="primary" 
    icon="SmileOutline"
    inline
    size="{{18}}"
  >
    Icon
  </button>

  <button
    type="primary" 
    icon="SmileOutline"
    inline
    size="{{17}}"
  >
    Icon
  </button>

  <button
    type="primary" 
    icon="SmileOutline"
    inline
    size="{{15}}"
  >
    Icon
  </button>

</container>

<container title="inline danger icon">
  <button
    type="primary" 
    icon="ForbidFill"
    inline
    danger
    size="{{18}}"
  >
    Icon
  </button>

  <button
    type="primary" 
    icon="ForbidFill"
    inline
    danger
    size="{{17}}"
  >
    Icon
  </button>

  <button
    type="primary" 
    icon="ForbidFill"
    inline
    danger
    size="{{15}}"
  >
    Icon
  </button>
