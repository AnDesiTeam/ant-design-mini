<import-sjs from="../index.sjs" name="componentUtils" />

<list 
  className="amd-v1-checkbox-group {{className ? className : ''}} amd-v1-checkbox-group-{{position}}" style="{{style}}">
  <checkbox-group
    name="{{name}}"
    value="{{ mixin.value }}"
  >
    <view class="amd-v1-checkbox-group-body">
      <block a:if="{{position === 'vertical'}}">
        <list-item stopPropagation a:for="{{options}}">
          <checkbox
            color="{{color}}"
            checked="{{componentUtils.getCheckboxChecked(item, mixin.value)}}"
            data-index="{{index}}"
            value="{{item.value}}"
            disabled="{{disabled || item.disabled}}"
            onChange="onChange"
          > 
            <slot name="label" value="{{item}}" index="{{index}}">
              {{item.label}}
            </slot>  
          </checkbox>
        </list-item>
      </block>
      <block a:else>
        <checkbox
          a:for="{{options}}"
          color="{{color}}"
          checked="{{componentUtils.getCheckboxChecked(item, mixin.value)}}"
          data-index="{{index}}"
          value="{{item.value}}"
          disabled="{{disabled || item.disabled}}"
          onChange="onChange"
        >
          <slot name="label" value="{{item}}" index="{{index}}">
            {{item.label}}
          </slot>
        </checkbox>
      </block>
    </view>
  </checkbox-group>
</list>
