<container title="icon">
  <button
    type="primary" 
    icon="SmileOutline"
  >
    Icon
  </button>

  <button
    type="default" 
    icon="SmileOutline"
  >
    Icon
  </button>

  <button
    type="text" 
    icon="SmileOutline"
  >
    Icon
  </button>

  <button
    type="primary"
    danger
    icon="ForbidFill"
  >
    Icon
  </button>

  <button
    type="default"
    danger
    icon="ForbidFill"
  >
    Icon
  </button>

  <button
    type="text"
    danger
    icon="ForbidFill"
  >
    Icon
  </button>
