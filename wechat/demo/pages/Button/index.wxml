<container
  title="按钮类型"
  className="list">
  <button
    type="primary"
    bind:tap="handleTap">
    主要按钮
  </button>

  <button
    type="default"
    bind:tap="handleTap">
    次要按钮
  </button>

  <button
    type="text"
    bind:tap="handleTap">
    文本按钮
  </button>
</container>

<container
  title="带辅助文案按钮"
  className="list">
  <button
    type="primary"
    subText="副标题"
    bind:tap="handleTap">
    主要按钮
  </button>

  <button
    type="default"
    subText="副标题"
    bind:tap="handleTap">
    次要按钮
  </button>

  <button
    type="text"
    subText="副标题"
    bind:tap="handleTap">
    文本按钮
  </button>
</container>

<container
  title="禁用"
  className="list">
  <button
    type="primary"
    disabled>
    主要按钮
  </button>

  <button
    type="default"
    disabled>
    次要按钮
  </button>

  <button
    type="text"
    disabled>
    文本按钮
  </button>
</container>

<container
  title="加载状态"
  className="list">
  <button
    type="primary"
    loading>
    主要按钮
  </button>

  <button
    type="default"
    loading>
    次要按钮
  </button>

  <button
    type="text"
    loading>
    文本
  </button>
</container>

<container
  title="危险"
  className="list">
  <button
    type="primary"
    danger
    bind:tap="handleTap">
    主要按钮
  </button>

  <button
    type="default"
    danger
    bind:tap="handleTap">
    次要按钮
  </button>

  <button
    type="text"
    danger
    bind:tap="handleTap">
    文本按钮
  </button>
</container>
