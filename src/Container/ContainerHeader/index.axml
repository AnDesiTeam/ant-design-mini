<view class="amd-v1-container-header {{ headerInBox ? 'amd-v1-container-headerInBox' : '' }}">
    <view class="amd-v1-container-header-title">
      <view class="amd-v1-container-header-content">
        <block a:if="{{typeof title !== 'undefined'}}">
          {{title}}
        </block>
        <block a:else>
          <slot name="title" />
        </block>
      </view>
    </view>
    <view 
      class="amd-v1-container-header-right"
    >
      <slot />
    </view>
</view>