{
  "compilerOptions": {
    "target": "ES5",
    "module": "ES6",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "declaration": true,
    "noImplicitThis": false,
    "jsx": "preserve",
    "types": ["@mini-types/alipay", "node"],
    "paths": {
      "tsxml": ["./src/tsxml/index.tsx"]
    }
  },
  "include": ["src/**/*", "typings/**/*", "demo/**/*"],
  "exclude": ["node_modules"]
}
