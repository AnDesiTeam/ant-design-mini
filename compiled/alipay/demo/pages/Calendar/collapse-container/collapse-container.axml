<container title="{{containerTitle}}">
  <view
    slot="headerRight"
    onTap="handleToggle"
    data-id="demo1">
    <text a:if="{{ !collapse }}">收起</text>
    <text a:else>展示</text>
  </view>
  <view a:if="{{ !collapse }}">
    <slot name="content"></slot>
  </view>
  <view
    a:else
    onTap="handleToggle">
    <slot name="description"></slot>
    <view class="placeholder">展示</view>
  </view>
</container>
