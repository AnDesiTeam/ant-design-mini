<view style="display: flex; flex-direction:column; height:100vh;">
  <tabs
    items="{{items}}"
    current="{{current}}"
    onChange="onChange"
    style="position: sticky;top: 0;z-index: 999;"
  />

  <scroll-view
    onScroll="onScroll"
    scroll-top="{{scrollTop}}"
    scroll-y="{{true}}"
    scroll-with-animation="{{true}}"
    scroll-animation-duration="{{300}}"
  >
    <view>
      {{items[current].content}}
    </view>
  </view>
</view>

{{scrollTop}}