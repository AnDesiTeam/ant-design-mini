<view class="amd-v1-image-upload {{className || ''}}"  style="{{style || ''}}">
  <view a:for="{{fileList}}" class="amd-v1-image-upload-show">
    <view 
      class="amd-v1-image-upload-close" 
      a:if="{{item.status !== 'pending'}}" 
      data-delete-image-index="{{index}}" 
      onTap="onDeleteImage" 
    />
    <view 
      class="amd-v1-image-upload-cover" 
      a:if="{{item.status === 'pending' || item.status === 'error'}}" 
      style="{{`height:${height}px;width:${width}px`}}"
    >
      <view a:if="{{item.status === 'pending'}}" class="amd-v1-image-upload-cover-loading">
        <view class="amd-v1-image-upload-cover-loading-icon"/>
        <view class="amd-v1-image-upload-cover-loading-text">上传中...</view>
      </view>
      <view a:if="{{item.status === 'error'}}" class="amd-v1-image-upload-cover-error">
        <am-icon class="amd-v1-image-upload-cover-error-icon" type="CloseCircleOutline"/>
        <view class="amd-v1-image-upload-cover-error-text">上传失败</view>
      </view>
    </view>
    <image 
      class="amd-v1-image-upload-image" 
      mode="{{mode}}" 
      src="{{item.localPath || item.url || item.key}}"
      data-preview-image-index="{{index}}" 
      style="{{`height:${height}px;width:${width}px`}}" 
      onTap="onPreviewImage" 
    />
  </view>

  <view 
    a:if="{{fileList.length < maxCount}}" 
    class="amd-v1-image-upload-add-image-wrapper" 
    style="{{`height:${height}px;width:${width}px`}}" 
    onTap="onChooseImage"
  >
    <slot name='uploadIcon'>
      <am-icon type="AddOutline" className="amd-v1-image-upload-add-image-icon" />
    </slot>
  </view>
</view> 