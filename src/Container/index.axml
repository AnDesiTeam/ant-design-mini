<view class="amd-container {{className ? className : ''}}" style="{{style}}">
  <header title="{{title}}" headerInBox="{{headerInBox}}">
    <slot name="headerRight"></slot>
    <slot slot="title" name="title"></slot>
  </header>
  <view class="amd-container-content {{ headerInBox ? 'amd-container-content-withHalfRadius' : 'amd-container-content-withRadius' }}">
    <slot />
  </view>
</view>
