<container title="loading icon">
  <button 
    type="primary" 
    icon="SmileOutline"
    onTap="handleTap"
    inline
    loading
  >
    loading
  </button>

  <button 
    type="primary" 
    icon="ForbidFill"
    onTap="handleTap"
    inline
    danger
    loading
  >
    loading
  </button>

  <button 
    type="primary" 
    icon="SmileOutline"
    onTap="handleTap"
    loading
  >
    loading
  </button>
</container>

