<list header="数字输入框示例">
  <list-item>
    <view
      class="number-content {{ value ? '' : 'number-placeholder'}}"
      catchTap="onNumberFocus">
      <text a:if="{{value}}">{{ value }}</text>
      <text
        a:else
        class="number-content-tip">
        0.00
      </text>
      <view
        a:if="{{visible}}"
        class="number-light"
        style="{{{position: value ? 'static' : 'absolute'}}}" />
    </view>
  </list-item>
  <number-keyboard
    visible="{{visible}}"
    point="{{false}}"
    closeable="{{true}}"
    value="{{value}}"
    onChange="onChange"
    onClose="onClose" />
</list>
