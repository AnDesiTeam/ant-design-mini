<container title="步骤条控制">
  <steps
    items="{{items}}"
    current="{{current}}" />
  <button
    onTap="onNextTap"
    type="primary">
    <view a:if="{{current < items.length - 1}}">下一步</view>
    <view a:else>完成</view>
  </button>
  <button
    a:if="{{current > 0}}"
    onTap="onPrevTap">
    上一步
  </button>
</container>
