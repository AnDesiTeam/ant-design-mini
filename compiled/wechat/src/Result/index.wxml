<wxs
  src="./index.wxs"
  module="result" />

<view
  class="ant-result {{ className ? className : '' }}"
  style="{{ style || '' }}">
  <view class="ant-result-main">
    <block wx:if="{{ type }}">
      <view class="ant-result-image">
        <icon
          type="{{ result.iconType(type) }}"
          className="ant-result-image-{{ type }}"
          style="font-size: 64px" />
      </view>
    </block>
    <block wx:else>
      <block wx:if="{{ image }}">
        <image-icon
          className="ant-result-image"
          image="{{ image }}" />
      </block>
      <block wx:else><block /></block>
    </block>
    <view class="ant-result-title">{{ title }}</view>
    <view class="ant-result-message">
      <!-- display: inline -->
      <text>{{ message }}</text>
    </view>
  </view>
  <slot name="extra" />
</view>
