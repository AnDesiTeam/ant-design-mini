<view 
  class="amd-toast {{className}} {{icon || image || type ? 'amd-toast-icon-wrapper' : ''}}" 
  a:if="{{show}}" 
  style="{{style}}"
>
  <view a:if="{{type}}" class="amd-toast-normal">
    <loading 
      a:if="{{type === 'loading'}}" 
      type="mini" 
      height="40px"
    />
    <am-icon 
      a:elif="{{type === 'warning'}}" 
      type="ExclamationOutline" 
      className="amd-toast-icon"
    />
    <am-icon 
      a:elif="{{type === 'error'}}" 
      type="CloseOutline" 
      className="amd-toast-icon" 
    />
    <am-icon 
      a:elif="{{type === 'success'}}" 
      type="CheckOutline" 
      className="amd-toast-icon" 
    />
  </view>
  <am-icon 
    a:elif="{{icon}}" 
    type="{{icon}}" 
    className="amd-toast-icon"
  />
  <view 
    a:elif="{{image}}" 
    style="background-image: url({{image}})" 
    class="amd-toast-image" 
  />
  <view class="amd-toast-text-body">
    <view class="amd-toast-text-box">
      <view class="amd-toast-text-content">
        {{content.substring(0, 24)}}
      </view>
    </view>
  </view>
</view>

<mask 
  className="amd-toast-mask"
  a:if="{{show && showMask}}"
  show="{{true}}"
  onMaskTap="handleClickMask" 
  style="{{maskStyle}}" 
/>