<button onTap="handleShowToast1" class="button" inline="{{true}}" inlineSize="{{medium}}">
  纯文字 toast
</button>

<button onTap="handleShowToast2" class="button" inline="{{true}}" inlineSize="{{medium}}">
  带图标 Toast
</button>

<button onTap="handleShowToast3" class="button" inline="{{true}}" inlineSize="{{medium}}">
  提示持续时间3s
</button>

<toast content="{{content1}}" visible="{{toast1Show}}" duration="{{0}}" class="toastWrapper" />

<toast content="{{content2}}" icon="{{icon2}}" visible="{{toast2Show}}" duration="{{0}}" class="toastWrapper" />

<toast content="{{content3}}" visible="{{toast3Show}}" duration="{{3000}}" class="toastWrapper" />
