<import-sjs name="utils" from="./index.sjs" />

<view class="amd-v1-collapse {{className ? className : ''}}" style="{{style}}">
  <view a:for="{{items}}" class="amd-v1-collapse-item 
    {{utils.isActive(mixin.value, index, item.disabled) ? 'amd-v1-collapse-item-active' : ''}} 
    {{item.disabled ? 'amd-v1-collapse-item-disabled' : ''}}"
  >
    <view class="amd-v1-collapse-item-title"
      data-active="{{utils.isActive(mixin.value, index, item.disabled)}}" 
      data-index="{{index}}"
      data-id="{{$id}}"
      onTap="onChange"
    >
      <view class="amd-v1-collapse-item-line">
        <view class="amd-v1-collapse-item-title-node">
          <slot name="title" value="{{item}}" index="{{index}}">
            {{item.title}}
          </slot>
        </view>
        <view class="amd-v1-collapse-item-brief-container">
          <view class="amd-v1-collapse-item-brief-node">
            <slot name="brief" value="{{item}}" index="{{index}}">
              {{brief}}
            </slot>
          </view>
          
          <view class="amd-v1-collapse-item-title-arrow">
            <slot name="icon" value="{{item}}" index="{{index}}" current="{{mixin.value}}">
              <am-icon type="{{utils.isActive(mixin.value, index, item.disabled) ? 'UpOutline' : 'DownOutline'}}" size="x-small" /> 
            </slot>
          </view>
        </view>
      </view>
    </view>
    <view
      class="amd-v1-collapse-item-content-wrap {{hasChange ? 'amd-v1-collapse-item-content-wrap-transition' : ''}} {{`amd-v1-collapse-item-content-wrap-${$id}-${index}`}}"
      onTransitionEnd="resetContentHeight"
      style="{{utils.getStyleHeight(index, contentHeight, item.disabled)}}"
      data-index="{{index}}"
    >
      <view class="amd-v1-collapse-item-content-container">
        <view class="amd-v1-collapse-item-content {{`amd-v1-collapse-item-content-${$id}-${index}`}}">
          <slot name="content" value="{{item}}" index="{{index}}">
            {{item.content}}
          </slot>
        </view>
      </view>
    </view>
  </view>

</view>