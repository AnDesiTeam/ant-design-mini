<view style="height: 50px;">tabs 吸顶模式</view>

<tabs
  items="{{items}}"
  current="{{current}}"
  onChange="onChange"
  class="tabs"
/>

<scroll-view
  id="scroll-view"
  scrollTop="{{scrollTop}}"
  scroll-y="{{true}}"
  scroll-with-animation="{{true}}"
  scroll-animation-duration="{{300}}"
  class="content"
>
  {{items[current].content}}
</scroll-view>