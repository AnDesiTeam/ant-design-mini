{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "noEmit": true,
    "esModuleInterop": true,
    "target": "ES6",
    "jsx": "react",
    "moduleResolution": "node",
    "noImplicitThis": true,
    "strict": true,
    "types": [
      "@mini-types/alipay",
      "jest",
      "node"
    ]
  },
  "lib": [
    "ES2015"
  ],
  "include": [
    "src/**/*.ts",
    "scripts/docs/**/*.ts",
    "__tests__/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.js"
  ]
}