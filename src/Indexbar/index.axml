<view class="amd-indexbar-side {{className}} {{scrollIntoView ? 'amd-indexbar-side-right' : ''}}" disable-scroll="{{true}}" style="{{{ width: `${itemSize}px` }}}" hover-stop-propagation>
  <view a:if="{{showMask}}" class="amd-indexbar-side-mask"></view>
  <view class="amd-indexbar-side-content">
    <view
      a:for="{{items}}"
      class="amd-indexbar-side-item {{activeClassName}} {{touchKey ? ((touchKey === item.label) ? 'amd-indexbar-side-active' : '') : (index === currentKey ? 'amd-indexbar-side-active' : '')}}"
      catchTouchStart="onTouchStart"
      catchTouchMove="onTouchMove"
      catchTouchEnd="onTouchEnd"
      data-item="{{item, index}}"
      id="{{'amd-alphabet-' + index}}"
      style="{{{ width: `${itemSize}px`, height: `${itemSize}px` }}}"
    >
      {{item.label}}
      <view class="amd-indexbar-side-item-tip" a:if="{{item.label === touchKey && !item.disablePreview}}">
        {{item.label}}
        <slot value="{{item}}" index="{{index}}" name="labelPreview"/>
      </view>
    </view>
  </view>
</view>
<scroll-view
  a:if="{{scrollIntoView}}"
  scroll-y
  class="amd-indexbar-side-scroll"
  scroll-into-view="{{`amd-indexbar-${touchKey}`}}"
  onScroll="onScroll">
  <view a:for="{{items}}" class="amd-indexbar-side-list" id="{{`amd-indexbar-${item.label}`}}">
    <slot value="{{item}}" index="{{index}}"/>
  </view>
</scroll-view>